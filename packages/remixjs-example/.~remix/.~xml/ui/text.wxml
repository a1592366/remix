<template name="_text">
  <text style="{{style}}" data-id="{{dataId}}" data-type="{{type}}" class="{{className}}">

    <block if="{{children.length > 0}}">
      <block
        wx:for="{{children}}" 
        wx:for-index="index" 
        wx:for-item="node"
        wx:key="{{node.key}}"
      >
        <block wx:if="{{node.type === '#text'}}">{{node.text}}</block>
        <block wx:else>
          <section data-type="{{node.type}}" children="{{node.children}}" />
        </block>
      </block>
    </block>

  </text>
</template>

<template name="text">
  <template is="_text" data="{{ ...props, children: children, dataId: id, type: type }}" />
</template>