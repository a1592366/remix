<template name="audio_children">
  <block wx:if="{{children.length > 0}}">
    <block
      wx:for="{{children}}" 
      wx:for-index="index" 
      wx:for-item="node"
      wx:key="{{node.key}}"
    >
      <section data-type="{{node.type}}" node-id="{{node.id}}" node="{{node}}" data-id="{{node.dataId}}" id="{{node.id}}" />
    </block>
  </block>
</template>

<template name="__audio">
  <audio src="{{src}}" loop="{{loop}}" poster="{{poster}}" controls="{{controls}}" name="{{name}}" author="{{author}}" bindpause="pa" binderror="e" bindplay="pl" bindended="ed" style="{{style}}" data-id="{{dataId}}" data-type="{{type}}" class="{{className}}">
  </audio>
</template>

<template name="_audio">
  <block wx:if="{{e}}">
    <block wx:if="{{e.tu}}">
      <audio src="{{src}}" loop="{{loop}}" poster="{{poster}}" controls="{{controls}}" name="{{name}}" author="{{author}}" bindpause="pa" binderror="e" bindplay="pl" bindended="ed" style="{{style}}" data-id="{{dataId}}" data-type="{{type}}" class="{{className}}" bindtimeupdate="tu">
      </audio>
    </block>
    <block wx:else>
      <template is="__audio" data="{{ ...props, children: children, dataId: dataId, type: type }}" />
    </block>
  </block>
  <block wx:else>
    <template is="__audio" data="{{ ...props, children: children, dataId: dataId, type: type }}" />
  </block>
</template>

<template name="audio">
  <template is="_audio" data="{{ ...props, children: children, dataId: dataId, type: type, props: props }}" />
</template>
