<template name="_picker-view">
  <picker-view value="{{value}}" indicator-style="{{indicatorStyle}}" indicator-class="{{indicatorClass}}" mask-style="{{maskStyle}}" mask-class="{{maskClass}}" bindpickstart="ps" bindpickend="pe" bindchange="cg" style="{{style}}" data-id="{{dataId}}" data-type="{{type}}" class="{{className}}">
    <block wx:if="{{children.length > 0}}">
      <picker-view-column
        wx:for="{{children}}" 
        wx:for-index="index" 
        wx:for-item="node"
        wx:key="{{node.key}}"
      >
        <section data-type="picker" node-id="{{node.dataId}}" children="{{node.children}}" />
      </picker-view-column>
    </block>
  </picker-view>
</template>

<template name="picker-view">
  <template is="_picker-view" data="{{ ...props, children: children, dataId: dataId, type: type }}" />
</template>