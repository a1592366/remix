
.index__menus {

}

.index__menus-tabs {
  height: 80rpx;
  margin: 0 40rpx;
  box-sizing: border-box;
  position: relative;
}

.index__menus-tabs-inner {
  display: flex;
}

.index__menus-tabs-line {
  position: absolute;
  height: 4rpx;
  width: 15%;
  background-color: rgb(189, 169, 80);
  bottom: 0;
  transform: translateX(-50%);
  transition: left .5s;
}

.index__menu-item-tab {
  flex: 1;
  font-size: 30rpx;
  text-align: center;
  color: rgb(212, 212, 212);
  line-height: 80rpx;
  position: relative;
}



.index__menu-item-tab:active {
  opacity: 0.7;
}

.index__menu-item-tab::after {
  content: "";
  background-color: rgb(102, 103, 103);
  position: absolute;
  height: 30%;
  top: 50%;
  right: 0;
  width: 2rpx;
  transform: translate(0, -50%);
}

.index__menu-item-tab:last-child::after {
  display: none;
}

.index__menu-item-tab_active {
  color: rgb(189, 169, 80);
  position: relative;
}

.index__menu-item-content {
  display: none;
}

.index__menu-item-content_active {
  display: block;
}
.index__movies-card {
  margin-bottom: 30rpx;
}

.index__movies-card:active {
  opacity: .7;
}

.index__movies-card-cover {
  border-radius: 32rpx;
  height: 310rpx;
  background: rgb(23, 23, 18);
  box-shadow: 0 10rpx 50rpx rgba(0, 0, 0, .3);
  overflow: hidden;
}


.index__movies-card-cover-image {
  height: 100%;
  width: 100%;
}


.index__movies-card-meta {
  margin-top: 30rpx;
  font-size: 24rpx;
  color: rgb(180, 180, 180);
}

.index__movies-card-name {
  font-size: 30rpx;
  font-weight: 500;
  color: rgb(0, 0, 0);
}
.index {
  background-color: rgb(13, 10, 9);
}

.index__header {
  height: 400rpx;  
}

.index__movies {
  background-color: rgb(255, 255, 255);
  padding: 40rpx;
}

.index__video {
  height: 100%;
  width: 100%;
}
