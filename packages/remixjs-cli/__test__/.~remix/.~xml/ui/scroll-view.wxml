<template name="scroll-view_children">
  <block wx:if="{{children.length > 0}}">
    <block
      wx:for="{{children}}" 
      wx:for-index="index" 
      wx:for-item="node"
      wx:key="{{node.key}}"
    >
      <section data-type="{{node.type}}" node-id="{{node.id}}" node="{{node}}" data-id="{{node.dataId}}" id="{{node.id}}" />
    </block>
  </block>
</template>

<template name="__scroll-view">
  <scroll-view scroll-x="{{scrollX}}" scroll-y="{{scrollY}}" upper-threshold="{{upperThreshold}}" lower-threshold="{{lowerThreshold}}" scroll-top="{{scrollTop}}" scroll-left="{{scrollLeft}}" scroll-into-view="{{scrollIntoView}}" scroll-with-animation="{{scrollWithAnimation}}" enable-back-to-top="{{enableBackToTop}}" bindscrolltoupper="stu" bindscrolltolower="stl" style="{{style}}" data-id="{{dataId}}" data-type="{{type}}" class="{{className}}">
    <template is="_scroll-view_children_" data="{{ children: children }}" />
  </scroll-view>
</template>

<template name="_scroll-view">
  <block wx:if="{{e}}">
    <block wx:if="{{e.srl}}">
      <scroll-view scroll-x="{{scrollX}}" scroll-y="{{scrollY}}" upper-threshold="{{upperThreshold}}" lower-threshold="{{lowerThreshold}}" scroll-top="{{scrollTop}}" scroll-left="{{scrollLeft}}" scroll-into-view="{{scrollIntoView}}" scroll-with-animation="{{scrollWithAnimation}}" enable-back-to-top="{{enableBackToTop}}" bindscrolltoupper="stu" bindscrolltolower="stl" style="{{style}}" data-id="{{dataId}}" data-type="{{type}}" class="{{className}}" bindscroll="srl">
        <template is="scroll-view_children" data="{{ children: children }}" />
      </scroll-view>
    </block>
    <block wx:else>
      <template is="__scroll-view" data="{{ ...props, children: children, dataId: dataId, type: type }}" />
    </block>
  </block>
  <block wx:else>
    <template is="__scroll-view" data="{{ ...props, children: children, dataId: dataId, type: type }}" />
  </block>
</template>

<template name="scroll-view">
  <template is="_scroll-view" data="{{ ...props, children: children, dataId: dataId, type: type, props: props }}" />
</template>
