<% if (name === 'view' || name === 'text') { %>
<import src="../remix-worker.wxml" /> 
<import src="../inner-remix-worker.wxml" />

<block wx:if="{{innerText}}">{{innerText}}</block><block wx:elif="{{child}}"><template is="remix-worker" data="{{ element: child }}" /></block>
<% } else if (name === 'root') { %>
  <remix-view child="{{element.child}}" <%- props %>  />
<% } else { %>
<template name="<%= name %>">
<<%=tagName %> 
  <%- props %>
>
  <% if (openComponent) { %>
  <block wx:if="{{innerText}}">{{innerText}}</block>
  <block wx:elif="{{child}}"><template is="inner-remix-worker" data="{{ ...child }}" /></block>
  <% } %>
</<%=tagName %>>
</template>  
<% } %>






