<%- imports %>

<wxs src="./remix-slibings.wxs" module="getSlibings" />

<template name="deep-selection">
  <block wx:if="{{ element.tagName == '#text' }}">{{element.text}}</block>
  <%- components %>
</template>

<template name="deep-slibings">
  <block wx:for="{{getSlibings(element)}}" wx:key="uuid" wx:for-item="slibing">
    <template is="deep-selection" data="{{ element: slibing }}" />
  </block>
</template>

<template name="deep-remix-worker">  
  <template is="deep-selection" data="{{ element }}" />
  <template is="deep-slibings" data="{{ element }}" />
</template>