<import src="./remix-picker/index.wxml" />
<import src="./remix-video/index.wxml" />
<import src="./remix-scroll-view/index.wxml" />
<import src="./remix-swiper/index.wxml" />
<import src="./remix-swiper-item/index.wxml" />
<import src="./remix-map/index.wxml" />
<import src="./remix-image/index.wxml" />
<import src="./remix-button/index.wxml" />
<import src="./remix-input/index.wxml" />

<wxs src="./remix-slibings.wxs" module="getSlibings" />

<template name="inner-selection">
  <block wx:if="{{ element.tagName == '#text' }}">{{element.text}}</block>
  <block wx:elif="{{ element.tagName == 'root' }}">
		<remix-root child="{{element.child}}" innerText="{{element.innerText}}" uuid="{{element.uuid}}" parent="{{element.parent}}" style="{{element.style}}" className="{{element.className}}" onTouchStart="{{element.onTouchStart}}" onTouchMove="{{element.onTouchMove}}" onTouchCancel="{{element.onTouchCancel}}" onTouchEnd="{{element.onTouchEnd}}" onTap="{{element.onTap}}" onLongPress="{{element.onLongPress}}" onLongTap="{{element.onLongTap}}" onTouchForceChange="{{element.onTouchForceChange}}" onTransitionEnd="{{element.onTransitionEnd}}" onAnimationStart="{{element.onAnimationStart}}" onAnimationIteration="{{element.onAnimationIteration}}" onAnimationEnd="{{element.onAnimationEnd}}"  />
	</block>
	<block wx:elif="{{ element.tagName == 'view' }}">
		<view child="{{element.child}}" innerText="{{element.innerText}}" id="{{element.uuid}}" uuid="{{element.uuid}}" parent="{{element.parent}}" style="{{element.style}}" class="{{element.className}}" hover-class="{{element.hoverClass}}" hover-stop-propagation="{{element.hoverStopPropagation}}" hover-start-time="{{element.hoverStartTime}}" hover-stay-time="{{element.hoverStayTime}}" bind:touchstart="{{element.onTouchStart}}" bind:touchmove="{{element.onTouchMove}}" bind:touchcancel="{{element.onTouchCancel}}" bind:touchend="{{element.onTouchEnd}}" bind:tap="{{element.onTap}}" bind:longpress="{{element.onLongPress}}" bind:longtap="{{element.onLongTap}}" bind:touchforcechange="{{element.onTouchForceChange}}" bind:transitionend="{{element.onTransitionEnd}}" bind:animationstart="{{element.onAnimationStart}}" bind:animationiteration="{{element.onAnimationIteration}}" bind:animationend="{{element.onAnimationEnd}}"  />
	</block>
	<block wx:elif="{{ element.tagName == 'text' }}">
		<text child="{{element.child}}" innerText="{{element.innerText}}" id="{{element.uuid}}" uuid="{{element.uuid}}" parent="{{element.parent}}" style="{{element.style}}" class="{{element.className}}" selectable="{{element.selectable}}" space="{{element.space}}" decode="{{element.decode}}"  />
	</block>
	<block wx:elif="{{ element.tagName == 'picker' }}">
		<template is="picker" data="{{ ...element }}" />
	</block>
	<block wx:elif="{{ element.tagName == 'video' }}">
		<template is="video" data="{{ ...element }}" />
	</block>
	<block wx:elif="{{ element.tagName == 'scroll-view' }}">
		<template is="scroll-view" data="{{ ...element }}" />
	</block>
	<block wx:elif="{{ element.tagName == 'swiper' }}">
		<template is="swiper" data="{{ ...element }}" />
	</block>
	<block wx:elif="{{ element.tagName == 'swiper-item' }}">
		<template is="swiper-item" data="{{ ...element }}" />
	</block>
	<block wx:elif="{{ element.tagName == 'map' }}">
		<template is="map" data="{{ ...element }}" />
	</block>
	<block wx:elif="{{ element.tagName == 'image' }}">
		<template is="image" data="{{ ...element }}" />
	</block>
	<block wx:elif="{{ element.tagName == 'button' }}">
		<template is="button" data="{{ ...element }}" />
	</block>
	<block wx:elif="{{ element.tagName == 'input' }}">
		<template is="input" data="{{ ...element }}" />
	</block>
</template>

<template name="inner-slibings">
  <block wx:for="{{getSlibings(element)}}" wx:key="uuid" wx:for-item="slibing">
    <template is="inner-selection" data="{{ element: slibing }}" />
  </block>
</template>

<template name="inner-remix-worker">  
  <template is="inner-selection" data="{{ element }}" />
  <template is="inner-slibings" data="{{ element }}" />
</template>