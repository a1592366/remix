<template name="_picker">
  <picker range="{{range}}" range-key="{{rangeKey}}" value="{{value}}" disable="{{disable}}" bindchange="change" bindcancel="cancel" style="{{style}}" data-id="{{dataId}}" data-type="{{type}}" class="{{className}}">
    <block wx:if="{{children.length > 0}}">
      <block
        wx:for="{{children}}" 
        wx:for-index="index" 
        wx:for-item="node"
        wx:key="{{node.key}}"
      >
        <section data-type="swiper-picker" node-id="{{node.dataId}}" children="{{children}}" />
      </block>
    </block>
    <block wx:else>
      <section data-type="swiper-picker" node="{{node}}" />
    </block>
  </picker>
</template>

<template name="picker">
  <template is="_picker" data="{{ ...props, children: children, dataId: dataId, type: type }}" />
</template>